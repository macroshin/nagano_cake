<div class="col-md-2 offset-md-1">
  <h5 class="page_title">商品編集</h5>
</div>
<div class="col-md-6 offset-md-1">
  <table class="table table-borderless">
  <%= form_with model: [:admin, @item], local:true do |f| %>
    <tr>
      <td><label for="item_image">商品画像</label></td>
      <td><%= f.attachment_field :image, class:"form-control-file item_image", id:"item_image" %></td>
    </tr>
    <tr>
      <td><label for="item_name">商品名</label></td>
      <td><%= f.text_field :name,class:"form-control name", id:"item_name" %></td>
    </tr>
    <tr>
      <td><label for="item_introduction">商品説明</label></td>
      <td><%= f.text_area :introduction, class:"form-control introduction", id:"item_introduction" %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
    </tr>
    <tr>
      <td><label for="item_price">税抜価格</label></td>
      <td><%= f.number_field :price, class:"form-control price", id:"item_price" %>円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td>
        <%= f.radio_button :is_active, :true %>販売中
        <%= f.radio_button :is_active, :false %>販売停止中
      </td>
    </td>
  </table>
    <div class="form-group">
      <%= f.submit '変更を保存', class:"btn btn-success" %>
    </div>
  <% end %>
</div>