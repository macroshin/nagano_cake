<div class="col-md-2 offset-md-1">
  <h5 class="page_title">商品詳細</h5>
</div>
<div class="row">
  <div class="col-md-4 offset-md-1">
    <%= attachment_image_tag @item, :image, format: 'jpeg', size: "300x200" %>
  </div>
  <div class="col-md-5">
    <table class="table table-borderless">
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>税込価格<br>(税抜価格)</td>
        <td><%= @item.price + @item.price*0.1 %>(<%= @item.price %>)円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
          <% if @item.is_active == true %>
          販売中
          <% else %>
          販売停止中
          <% end %>
        </td>
      </tr>
    </table>
    <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-success" %>
  </div>
</div>