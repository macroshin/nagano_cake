<h3>商品新規登録</h3>
  <%= form_with model: [:admin, @item], local:true do |f| %>
    <div class="form-group">
      <label for="item_image">商品画像</label>
      <%= f.attachment_field :image, class:"form-control-file item_image", id:"item_image" %>
    </div>
    <div class="form-group">
      <label for="item_name">商品名</label>
      <%= f.text_field :name,class:"form-control name", id:"item_name" %>
    </div>
    <div class="form-group">
      <label for="item_introduction">商品説明</label>
      <%= f.text_area :introduction, class:"form-control introduction", id:"item_introduction" %>
    </div>
    <div class="form-group">
      ジャンル
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
    </div>
    <div class="form-group">
      <label for="item_price">税抜価格</label>
      <%= f.number_field :price, class:"form-control price", id:"item_price" %>円
    </div>
    <div class="form-group">
      販売ステータス
      <%= f.radio_button :is_active, true %>販売中
      <%= f.radio_button :is_active, false %>販売停止中
    </div>
    <div class="form-group">
      <%= f.submit '新規登録', class:"btn btn-secondary" %>
    </div>
  <% end %>