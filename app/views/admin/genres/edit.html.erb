<h3>ジャンル編集</h3>
  <%= form_with model: [:admin, @genre], local:true do |f| %>
    <div class="form-group">
      <label for="genre_name">ジャンル名</label>
      <%= f.text_field :name,class:"form-control genre_name", id:"genre_name" %>
    </div>
    <div class="form-group">
      <%= f.submit '変更を保存', class:"btn btn-success" %>
    </div>
  <% end %>