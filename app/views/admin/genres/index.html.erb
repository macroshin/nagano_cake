<div class="offset-md-1">
  <h5 class="page_title">ジャンル一覧・追加</h5>
</div>

<div class="row">
  <div class="col-md-5 offset-md-1">
  <%= form_with model: [:admin, @genre], local:true do |f| %>
  <div class="form-inline">
    <div class="form-group">
      <label for="genre_name">ジャンル名</label>
      <%= f.text_field :name,class:"form-control genre_name", id:"genre_name" %>
    </div>
    <div class="form-group">
      <%= f.submit '新規登録', class:"btn btn-success" %>
    </div>
  </div>
  <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-4 offset-1">
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>